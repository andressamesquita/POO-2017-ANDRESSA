<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.andressaribeiro.myfirstapp.CadastroAlunoActivity">


    <android.support.design.widget.TextInputLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/et_nome"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:hint="@string/nome_do_usu_rio"
            android:textSize="15dp"

            android:inputType="textShortMessage"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/et_escola"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:hint="@string/escola"
            android:textSize="15dp"
            android:inputType="textShortMessage"/>

    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Média Aprovativa"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="Média Pessoal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp">
        <TextView
            android:id="@+id/mApro"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/mPes"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:textStyle="bold"
            android:textSize="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="290dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp">

        <SeekBar
            android:id="@+id/seekBar_medAprovativa"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:max="10"/>

        <SeekBar
            android:id="@+id/seekBar_medPessoal"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:max="10" />

    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/et_email"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:inputType="textWebEmailAddress"
            android:textSize="15dp"/>

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/et_senha"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:hint="Senha"
            android:inputType="textPassword"
            android:textSize="15dp"/>

    </android.support.design.widget.TextInputLayout>



    <Button
        android:id="@+id/botao_cadastrar"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cadastrar" />
</LinearLayout>